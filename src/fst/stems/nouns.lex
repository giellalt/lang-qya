    aiwë                Cases   "bird" ;
    talan:tala{m-n}     Cases   "floor" ;
    nér:n{e-é}r         Cases   "man (adult male)" ;
    nís:n{i-í}{ss-s}    Cases   "woman (adult female)" ;
