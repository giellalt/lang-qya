    ! Lesson 2
    Anar                Cases   "the Sun" ;
    Isil:I[th]il        Cases   "the Moon" ;
    Elda                Cases   "Elf" ;
    lië                 Cases   "people, race" ;
    vendë:[w]endë       Cases   "maiden, virgin" ;
    rocco               Cases   "horse" ;
    aran                Cases   "king" ;
    tári                Cases   "queen" ;
    tasar:ta[th]ar      Cases   "willow" ;
